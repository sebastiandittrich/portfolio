---
import "@fontsource-variable/noto-sans";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Product Owner & Softwareentwickler" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {
      import.meta.env.PROD && (
        <script
          src="https://cdn.usefathom.com/script.js"
          data-spa="auto"
          data-site="KIOUAQTJ"
          defer=""
        />
      )
    }
  </head>
  <body>
    <div
      class="overflow-hidden relative min-h-screen flex flex-col sm:items-center justify-center bg-gray-50 py-16 sm:py-32"
    >
      <img
        src="/beams.jpg"
        alt=""
        class="absolute left-1/2 top-1/2 max-w-none -translate-x-1/2 -translate-y-1/2"
        width="1308"
      />
      <div
        class="absolute inset-0 bg-[url(/grid.svg)] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"
      >
      </div>
      <div
        class="relative bg-white px-6 pb-8 pt-10 shadow-xl ring-1 ring-gray-900/5 sm:min-w-[28rem] sm:rounded-lg sm:px-10"
      >
        <div class="mx-auto max-w-3xl">
          <slot />
        </div>
      </div>
    </div>
    <code
      class="bg-gray-50 flex items-center justify-center gap-8 p-8 text-sm text-gray-600 flex-wrap"
    >
      <a href="/impressum">Impressum</a>
      <a href="/datenschutz">Datenschutzerkl√§rung</a>
    </code>
  </body>
</html>
